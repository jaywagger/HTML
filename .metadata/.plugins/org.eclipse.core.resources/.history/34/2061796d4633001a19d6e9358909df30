<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=EUC-KR" />
	<title>Insert title here</title>
	<script type="text/javascript">
		//윈도우가 로딩될 때 익명의 함수를 실행해라.
		window.onload = function(){
			//페이지가 로등되면 btndomtest 객체 이벤트를 연결해라
			//=>btndomtest에 클릭이벤트가 발생되면 domtest함수를 호출하도록 
			//연결해라
			//alert("안녕~~~");
			document.getElementById("btndomtest").onclick = domTest;
			document.getElementById("nodetest").onclick= domTest2
		}
		
		function domTest(){
			alert("domTest...");
			//div태그 목록을 가져온다. -NodeList를 반환(배열)
			nodelist = document.getElementsByTagName("div");
			alert(nodelist);
			alert("div노드의 갯수=> "+nodelist.length);
			//getAttribute는 노드 (엘리먼트,태그)의 정의된 속성의 값을 리턴한다.
			//             -----
			for(i=0; i<nodelist.length;i++){
				alert("id 속성=> "+nodelist[i].getAttribute("id"));
				if(nodelist[i].getAttribute("id")=="domtestbtn"){
					alert("양식태그");
					alert(nodelist[i].firstChild.nodeName+","+nodelist[i].firstChild.nodeValue);
					
				}
			}
		}
		
		//domTest2에 노드의 탐색을 연습할 수 있도록 코드를 작성하세요
		//1. id가 myformId인 요소의 자식노드를 구하고 자식노드의 갯수를 alert하기
		//2. 자식노드를 탐색하고 자식노드의 id가 imginsert이면 노드의 이름을 출력하기
		
			function domTest2(){
			alert("domTest...");
			//div태그 목록을 가져온다. -NodeList를 반환(배열)
			nodelist = document.getElementById("myformId");
			alert(nodelist);
			alert("myformId 자식노드의 갯수=> "+nodelist.length);
			//getAttribute는 노드 (엘리먼트,태그)의 정의된 속성의 값을 리턴한다.
			//             -----
			for(i=0; i<nodelist.length;i++){
				alert("id 속성=> "+nodelist[i].getAttribute("id"));
				if(nodelist[i].getAttribute("id")=="domtestbtn"){
					alert("양식태그");
					alert(nodelist[i].firstChild.nodeName+","+nodelist[i].firstChild.nodeValue);
					
				}
			}
		}
	</script>
	
</head>

