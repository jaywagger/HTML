<!DOCTYPE html>
<html>
<head>
	<meta charset="EUC-KR">
	<title>Insert title here</title>
	<script type="text/javascript">
	
		function allcheck() {
			mycheck = myform.prd;//각 상품별 체크박스
			allChkVal = myform.allchk.checked;//전체선택
			for (i = 0; i < mycheck.length; i++) {
				mycheck[i].checked = allChkVal;
			}
			calc();
		}
		function calc() {
			countArr = myform.count; //수량 배열
			priceArr = myform.price; //가격 배열
			//alert(countArr.length+","+priceArr.length);
			//계산금액추가함 span
			calcpriceArr = document.getElementByClassName("calcprice");
			//체크박스
			mychk = myform.prd;
			result =0;
			totalPrice =0;
			//체크박스의 갯수만 
			for(i=0;i<mychk.length;i++){
				if(mychk[i].checked){ //체크박스가 체크가 되어있으면
					//계산해서 작업중인 mychk의 같은 index를 갖고있는 calcpricerArr요소에 출력
					result = parseInt(countArr[i].value) *
							parseInt(priceArr[i].value);
					calcpriceArr[i].innerHTML = result;
					//totalprice에 누적
					totalPrice += result;
				}else{
					calcpriceArr[i].innerHTML ="0";
				}
			}
			document.getElementById("totalprice").innerHTML = totalPrice;
			
		}
	</script>

</head>
<body>
	<form name="myform">
		<table border="1" width="800">
			<tr>
				<td><input type="checkbox" name="allchck" id="allchk" onclick="allcheck()"/>항목명</td>
				
				<td>상품정보</td>
				<td>수량</td>
				<td>판매가</td>
				<td>구매예정가</td>
			</tr>
			<tr>
				<td><input type="checkbox" name="prd" onclick='calc()'/>완도미역</td>
				<td><img src="../images/pro1.jpg"/></td>
				<td><input type="text" name="count" value="1" onkeyup="salesPrice()"/>
				</td>
				<td><input type="text" name="price" value="6900"/><span>원</span>
				</td>
				<td><span class="calcprice"></span><span id="totalPrice">원</span>
				</td>
			</tr>
			<tr>
				<td><input type="checkbox" name="prd"/ onclick='calc()'>스카트 빨아쓰는 휴지</td>
				<td><img src="../images/pro2.jpg"/></td>
				<td><input type="text" name="count" value="1"/></td>
				<td><input type="text" name="price" value="7800"/><span>원</span></td>
				<td><span class="calcprice"></span><span>원</span></td>
			</tr>
			<tr>
				<td colspan="6" align="right"><span id="totalprice"></span><span>원</span></td>
			</tr>
		</table>
	</form>
