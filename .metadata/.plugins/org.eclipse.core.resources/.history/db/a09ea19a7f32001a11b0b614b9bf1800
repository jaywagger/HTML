	<script type="text/javascript">
	function button_click(val){
		//alert(val);
		//myform.mytext.value = val; 누적시키는 걸로 바꿔야한다
		myform.mytext.value += val; //누적된 값을 테스트 상자에 뿌려주기
	}
	function compute(){
		result = eval(myform.mytext.value); //텍스트 상자 연산하기
		myform.mytext.value = result //텍스트 상자에 다시 뿌려주기
	}
	function clear_del()(){
		
	}
	</script>
